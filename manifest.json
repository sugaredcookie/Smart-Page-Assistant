{
  "manifest_version": 3,
  "name": "Smart Page Assistant",
  "version": "1.0",
  "description": "Analyze, summarize, rewrite, and translate any webpage using Chrome's built-in AI",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Page Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}